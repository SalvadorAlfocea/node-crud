<div class="jumbotron text-center">
    <h1>Edit event</h1>
</div>

<form action="/events/<%= event.slug %>" method="POST">

    <div class="form-group">
        <label>Name</label>
        <input type="text" name="name" value="<%= event.name %>" class="form-control">
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea name="description" rows="5" class="form-control"><%= event.description %></textarea>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success btn-lg">Edit</button>
    </div>

</form>